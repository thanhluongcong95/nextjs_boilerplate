{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --config eslint.config.mjs",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --config eslint.config.mjs --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true next build",
    "prettier": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "yarn prettier:fix && yarn lint:fix",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/nextjs-registry": "^1.1.0",
    "@tanstack/react-query": "5.90.5",
    "antd": "^5.27.6",
    "framer-motion": "^12.23.24",
    "next": "14.2.32",
    "next-intl": "^4.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recoil": "0.7.7",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "^9.39.0",
    "@next/bundle-analyzer": "14.2.32",
    "@next/eslint-plugin-next": "^16.0.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "commitlint": "20.1.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.32",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "lint-staged": "15.2.5",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.5",
    "tailwindcss": "4.1.14",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "src/**/!(*.test).{js,jsx,ts,tsx}": [
      "eslint --cache --config eslint.config.mjs --fix",
      "prettier --write"
    ],
    "src/**/!(*.test).{json,css,md}": [
      "prettier --write"
    ]
  }
}
